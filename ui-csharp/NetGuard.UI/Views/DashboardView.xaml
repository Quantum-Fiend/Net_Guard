<UserControl x:Class="NetGuard.UI.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewmodels="clr-namespace:NetGuard.UI.ViewModels"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             xmlns:sk="clr-namespace:LiveChartsCore.SkiaSharpView.Painting;assembly=LiveChartsCore.SkiaSharpView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=viewmodels:DashboardViewModel}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Stats Cards -->
        <UniformGrid Grid.Row="0" Rows="1" Columns="4" Margin="0,0,0,20">
            <!-- Captured Packets -->
            <Border Background="#2D2D30" CornerRadius="5" Padding="10" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="Total Packets" Foreground="#AAAAAA" FontSize="12"/>
                    <TextBlock Text="{Binding TotalPackets}" Foreground="White" FontSize="24" FontWeight="Bold"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="{Binding PacketsPerSecond, StringFormat=N0}" Foreground="#4CAF50"/>
                        <TextBlock Text=" pps" Foreground="#AAAAAA"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Data Volume -->
            <Border Background="#2D2D30" CornerRadius="5" Padding="10" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="Data Volume" Foreground="#AAAAAA" FontSize="12"/>
                    <TextBlock Text="{Binding BytesCaptured, StringFormat=N0}" Foreground="White" FontSize="24" FontWeight="Bold"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="{Binding BytesPerSecond, StringFormat=N0}" Foreground="#2196F3"/>
                        <TextBlock Text=" Bps" Foreground="#AAAAAA"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Alerts -->
            <Border Background="#2D2D30" CornerRadius="5" Padding="10" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="Alerts" Foreground="#AAAAAA" FontSize="12"/>
                    <TextBlock Text="{Binding AlertsCount}" Foreground="#F44336" FontSize="24" FontWeight="Bold"/>
                    <TextBlock Text="Threats Detected" Foreground="#AAAAAA" FontSize="10" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Active Flows -->
            <Border Background="#2D2D30" CornerRadius="5" Padding="10">
                <StackPanel>
                    <TextBlock Text="Active Flows" Foreground="#AAAAAA" FontSize="12"/>
                    <TextBlock Text="{Binding ActiveFlows}" Foreground="White" FontSize="24" FontWeight="Bold"/>
                    <TextBlock Text="Concurrent Connections" Foreground="#AAAAAA" FontSize="10" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </UniformGrid>

                    <TextBlock Text="Concurrent Connections" Foreground="#AAAAAA" FontSize="10" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </UniformGrid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Alerts Table -->
            <Border Grid.Column="0" Background="#2D2D30" CornerRadius="5" Padding="10" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Recent Alerts" Foreground="White" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    
                    <DataGrid Grid.Row="1" ItemsSource="{Binding RecentAlerts}" AutoGenerateColumns="False" 
                              Background="Transparent" BorderThickness="0" HeadersVisibility="Column"
                              RowBackground="Transparent" Foreground="White" GridLinesVisibility="Horizontal">
                        <DataGrid.Resources>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="#AAAAAA"/>
                                <Setter Property="Padding" Value="5"/>
                            </Style>
                            <Style TargetType="DataGridRow">
                             <Setter Property="Background" Value="Transparent"/>
                             <Setter Property="ContextMenu">
                                 <Setter.Value>
                                     <ContextMenu>
                                         <MenuItem Header="Block Source IP" 
                                                   Command="{Binding DataContext.BlockIpCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                                   CommandParameter="{Binding}"/>
                                     </ContextMenu>
                                 </Setter.Value>
                             </Setter>
                        </Style>
                        <Style TargetType="DataGridCell">
                                <Setter Property="Padding" Value="5"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridCell">
                                            <Border Padding="{TemplateBinding Padding}" Background="Transparent">
                                                <ContentPresenter />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#444444"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.Resources>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Time" Binding="{Binding Timestamp}" Width="80"/>
                            <DataGridTextColumn Header="Severity" Binding="{Binding Severity}" Width="80">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Severity}" Value="CRITICAL">
                                                <Setter Property="Foreground" Value="#FF5252"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Severity}" Value="HIGH">
                                                <Setter Property="Foreground" Value="#FF9800"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Severity}" Value="MEDIUM">
                                                <Setter Property="Foreground" Value="#FFEB3B"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="120"/>
                            <DataGridTextColumn Header="Source" Binding="{Binding Source}" Width="150"/>
                            <DataGridTextColumn Header="Destination" Binding="{Binding Destination}" Width="150"/>
                            <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Charts -->
            <Border Grid.Column="1" Background="#2D2D30" CornerRadius="5" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Protocol Distribution" Foreground="White" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <lvc:PieChart Series="{Binding ProtocolSeries}" LegendPosition="Bottom" Grid.Row="1">
                        <lvc:PieChart.LegendTextPaint>
                            <sk:SolidColorPaint Color="White"/>
                        </lvc:PieChart.LegendTextPaint>
                    </lvc:PieChart>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
