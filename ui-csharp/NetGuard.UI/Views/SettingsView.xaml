<UserControl x:Class="NetGuard.UI.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewmodels="clr-namespace:NetGuard.UI.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=viewmodels:SettingsViewModel}">
    <Border Background="#2D2D30" CornerRadius="5" Padding="30">
        <StackPanel MaxWidth="600" HorizontalAlignment="Left">
            <TextBlock Text="Settings" Foreground="White" FontSize="24" FontWeight="Bold" Margin="0,0,0,30"/>
            
            <!-- Email Alerting Section -->
            <TextBlock Text="Email Alerting" Foreground="#007ACC" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>
            
            <CheckBox Content="Enable Email Alerts" IsChecked="{Binding EnableEmailAlerts}" 
                      Foreground="White" Margin="0,0,0,20"/>

            <Grid IsEnabled="{Binding EnableEmailAlerts}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="SMTP Host:" Grid.Row="0" Grid.Column="0" Foreground="#AAAAAA" VerticalAlignment="Center" Margin="0,0,0,15"/>
                <TextBox Text="{Binding SmtpHost}" Grid.Row="0" Grid.Column="1" Padding="5" Margin="0,0,0,15" Background="#3E3E42" Foreground="White" BorderThickness="0"/>

                <TextBlock Text="SMTP Port:" Grid.Row="1" Grid.Column="0" Foreground="#AAAAAA" VerticalAlignment="Center" Margin="0,0,0,15"/>
                <TextBox Text="{Binding SmtpPort}" Grid.Row="1" Grid.Column="1" Padding="5" Margin="0,0,0,15" Background="#3E3E42" Foreground="White" BorderThickness="0"/>

                <TextBlock Text="Username:" Grid.Row="2" Grid.Column="0" Foreground="#AAAAAA" VerticalAlignment="Center" Margin="0,0,0,15"/>
                <TextBox Text="{Binding SmtpUsername}" Grid.Row="2" Grid.Column="1" Padding="5" Margin="0,0,0,15" Background="#3E3E42" Foreground="White" BorderThickness="0"/>

                <TextBlock Text="Password:" Grid.Row="3" Grid.Column="0" Foreground="#AAAAAA" VerticalAlignment="Center" Margin="0,0,0,15"/>
                <TextBox Text="{Binding SmtpPassword}" Grid.Row="3" Grid.Column="1" Padding="5" Margin="0,0,0,15" Background="#3E3E42" Foreground="White" BorderThickness="0"/>

                <TextBlock Text="From Address:" Grid.Row="4" Grid.Column="0" Foreground="#AAAAAA" VerticalAlignment="Center" Margin="0,0,0,15"/>
                <TextBox Text="{Binding FromAddress}" Grid.Row="4" Grid.Column="1" Padding="5" Margin="0,0,0,15" Background="#3E3E42" Foreground="White" BorderThickness="0"/>

                <TextBlock Text="To Address:" Grid.Row="5" Grid.Column="0" Foreground="#AAAAAA" VerticalAlignment="Center" Margin="0,0,0,15"/>
                <TextBox Text="{Binding ToAddress}" Grid.Row="5" Grid.Column="1" Padding="5" Margin="0,0,0,15" Background="#3E3E42" Foreground="White" BorderThickness="0"/>
            </Grid>

            <Button Content="Save Settings" Command="{Binding SaveSettingsCommand}" 
                    Background="#007ACC" Foreground="White" BorderThickness="0" Padding="10" Margin="0,20,0,0" HorizontalAlignment="Left" Width="150"/>
            
            <TextBlock Text="Data Management" Foreground="#007ACC" FontSize="18" FontWeight="SemiBold" Margin="0,30,0,15"/>
            <Button Content="Export Alerts to CSV" Command="{Binding ExportAlertsCommand}" 
                    Background="#388E3C" Foreground="White" BorderThickness="0" Padding="10" HorizontalAlignment="Left" Width="150"/>

            <TextBlock Text="{Binding StatusMessage}" Foreground="#4CAF50" Margin="0,10,0,0"/>
        </StackPanel>
    </Border>
</UserControl>
