<Application x:Class="NetGuard.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:NetGuard.UI"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <local:BoolToStartStopConverter x:Key="BoolToStartStopConverter"/>
            <local:BoolToColorConverter x:Key="BoolToColorConverter"/>
            <local:BoolToRecordConverter x:Key="BoolToRecordConverter"/>
            <local:BoolToRecordColorConverter x:Key="BoolToRecordColorConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
